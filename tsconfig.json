{
    "compilerOptions": {
      "module": "es2022",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "target": "es2017",
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true  
    },
    "lib": ["es2015"]
  }